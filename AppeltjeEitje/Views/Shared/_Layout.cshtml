<!DOCTYPE html>
<html>
<head>
    <title>Appeltje Eitje: @ViewBag.Title</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="">
        <nav class="navbar navbar-fixed-top navbar-dark bg-dark navbar-expand-md">
            <div class="container">
                <h1 class="navbar-brand">Appeltje Eitje</h1>
                <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="menu" class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Inschrijvingen">Inschrijvingen</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Groepen">Groepen</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="About">Over ons</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <section class="container">
        <h1>@ViewBag.Title</h1>
        @RenderBody()
    </section>
    <footer class="container">
        <div class="text-center">Footer van Appeltje Eitje</div>
    </footer>

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>